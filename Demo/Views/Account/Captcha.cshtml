@{
    ViewBag.Title = "Captcha Verification";
}
@section head {
    <style>
        footer {
            display: none;
        }
        main > h1 {
          margin-top:30px;
          text-align: center;
          font-size: 200%;
          font-weight: bolder;
          font-family: Yantramanav Bold;
        }
    </style>
}


<body>
    <center>
    <div class="container">
        <form name="form1">
            <input type="text" READONLY id="captchaTxtArea" name="text" value="" /><br>
            <input type="text" id="CaptchaEnter" placeholder="Enter the Code" /><br>
            <input type="button" value="REFRESH" id="refreshbtn" onclick="genNewCaptcha()">
            <input type="button" value="SUBMIT" id="checkbtn" onclick="checkCaptcha()">
        </form>
    </div>
    </center>
</body>
    <script type="text/javascript">

        var captcha,chars;

        function genNewCaptcha()
        {
            chars="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz";
            captcha= chars[Math.floor(Math.random()*chars.length)];

            for(var i=0;i<6;i++)
            {
                captcha=captcha+chars[Math.floor(Math.random()*chars.length)];

            }
            form1.text.value=captcha;
        }

        function checkCaptcha()
        {
            var check=document.getElementById("CaptchaEnter").value;
            if(captcha==check)
            {
                alert("Success");
                window.location.href = "@Url.Action("Login","Account")";
                document.getElementById("CaptchaEnter").value="";

            }
            else{
                alert("Failed! Please Try Again");
                document.getElementById("CaptchaEnter").value = "";
            }
        }
    </script>
